<%- include('Partials/header.ejs') %>

<style>
  body {
    background: radial-gradient(circle at top left, #1b1b1b, #111827, #0a0a0a);
    font-family: 'Poppins', sans-serif;
    color: #f5f5f5;
    overflow-x: hidden;
  }

  .card {
    border: 1px solid rgba(212, 175, 55, 0.4);
    border-radius: 20px;
    background: rgba(20, 20, 20, 0.85);
    backdrop-filter: blur(12px);
    box-shadow: 0 0 35px rgba(212, 175, 55, 0.1);
    transition: all 0.4s ease;
  }

  .card:hover {
    box-shadow: 0 0 45px rgba(212, 175, 55, 0.2);
    transform: translateY(-5px);
  }

  .card-header {
    background: linear-gradient(135deg, #b68d40, #f0c75e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 1.6rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    text-align: center;
    padding: 1.5rem 0 0.5rem;
  }

  label {
    color: #e5e5e5;
    font-weight: 500;
  }

  .form-control {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(212, 175, 55, 0.25);
    border-radius: 10px;
    color: #fff;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    background: rgba(255, 255, 255, 0.1);
    border-color: #d4af37;
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.4);
  }

  textarea.form-control {
    resize: none;
  }

  .btn {
    border-radius: 50px;
    padding: 10px 24px;
    font-weight: 500;
    letter-spacing: 0.3px;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: linear-gradient(90deg, #d4af37, #f7ce68);
    border: none;
    color: #1a1a1a;
    font-weight: 600;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(90deg, #f5c400, #cdaa3d);
    transform: translateY(-2px);
    box-shadow: 0 0 25px rgba(212, 175, 55, 0.5);
  }

  .btn-outline-secondary {
    border: 1px solid rgba(255, 255, 255, 0.4);
    color: #eee;
  }

  .btn-outline-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  hr {
    border-top: 1px solid rgba(212, 175, 55, 0.25);
  }

  .form-title-icon {
    color: #d4af37;
    font-size: 1.6rem;
    margin-right: 8px;
  }

  /* subtle glow animation for luxury feel */
  @keyframes goldGlow {
    0% { box-shadow: 0 0 20px rgba(212, 175, 55, 0.1); }
    50% { box-shadow: 0 0 40px rgba(212, 175, 55, 0.25); }
    100% { box-shadow: 0 0 20px rgba(212, 175, 55, 0.1); }
  }

  .card.animate-glow {
    animation: goldGlow 4s infinite ease-in-out;
  }
</style>

<main class="py-5">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-8">
        <div class="card animate-glow">
          <div class="card-header">
            <i class="fa-solid fa-pen-to-square form-title-icon"></i> Update Contact
          </div> 
          <form action="/contacts/edit/<%= contact._id %>" method="post">
            <div class="card-body px-4 pb-4">
              <div class="form-group mb-3">
                <label for="first_name">First Name</label>
                <input type="text" name="first_name" value="<%- contact.first_name %>" id="first_name" class="form-control">
              </div>

              <div class="form-group mb-3">
                <label for="last_name">Last Name</label>
                <input type="text" name="last_name" value="<%- contact.last_name %>" id="last_name" class="form-control">
              </div>

              <div class="form-group mb-3">
                <label for="city">City</label>
                <input type="text" name="city" value="<%- contact.city %>" id="city" class="form-control">
              </div>

              <div class="form-group mb-3">
                <label for="phone">Phone</label>
                <input type="text" name="phone" value="<%- contact.phone %>" id="phone" class="form-control">
              </div>

              <div class="form-group mb-4">
                <label for="address">Address</label>
                <textarea name="address" id="address" rows="3" class="form-control"><%- contact.address %></textarea>
              </div>

              <hr>
              <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-primary">
                  <i class="fa-solid fa-save me-1"></i> Save Changes
                </button>
                <a href="/contacts" class="btn btn-outline-secondary">
                  <i class="fa-solid fa-xmark me-1"></i> Cancel
                </a>
              </div>
            </div>
          </form>          
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('Partials/footer.ejs') %>
